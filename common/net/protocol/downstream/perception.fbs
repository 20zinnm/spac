namespace spac.downstream;

struct Vector {
    x:float32;
    y:float32;
}

table Ship {
    position:Vector;
    velocity:Vector;
    angle:float32;
    angularVelocity:float32;
    thrusting:bool;
    armed:bool;
    health:int16;
    name:string;
}

table Bullet {
    position:Vector;
    velocity:Vector;
}

union Snapshot { Ship, Bullet }

table Entity {
    id:uint64;
    snapshot:Snapshot;
}

table Perception {
    entities:[Entity];
}