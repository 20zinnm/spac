namespace spac.downstream;

struct Point {
    x:int;
    y:int;
}

struct Vector {
    x:float;
    y:float;
}

table Ship {
    position:Point;
    rotation:float;
    thrusting:bool;
    armed:bool;
    health:int16;
    name:string;
}

table Bullet {
    position:Point;
    velocity:Vector;
}

union Snapshot { Ship, Bullet }

table Entity {
    id:uint64;
    snapshot:Snapshot;
}

table Perception {
    entities:[Entity];
}